<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InterShopAdminDesktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="InterShopAdminDesktop.Views.AuthWnd"
        x:DataType="vm:AuthViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Авторизация">
<Grid>
    <TextBox Text="{Binding Login, DataType{x:Type vm:UserViewModel}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <TextBox Text="{Binding Password, DataType{x:Type vm:UserViewModel}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Button Content="Войти"/>
</Grid>
</Window>
